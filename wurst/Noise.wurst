    assertTrue(Noise.perlin(vec3(0.1, 0.1, 0.1)) == 0.18616073)
    assertTrue(Noise.perlin(vec3(0.24, -0.71, 0.58)) == 0.087833166)
    assertTrue(Noise.perlin(vec3(-0.86, -0.57, -0.13)) == -0.6246815)
    assertTrue(Noise.perlin(vec3(1, 1, 1)) == 0)

    // 2D Open Simplex
    assertTrue(Noise.openSimplex(vec2(0.1, 0.1)) == 0.1296945)
    assertTrue(Noise.openSimplex(vec2(0.24, -0.71)) == -0.03750664)
    assertTrue(Noise.openSimplex(vec2(-0.86, -0.57)) == 0.24364214)
    assertTrue(Noise.openSimplex(vec2(1, 1)) == -0.03702663)
