    assertTrue(Noise.perlin(vec2(0.1, 0.1)) == -0.006584215)
    assertTrue(Noise.perlin(vec2(0.24, -0.71)) == -0.14477593)
    assertTrue(Noise.perlin(vec2(-0.86, -0.57)) == -0.18754706)
